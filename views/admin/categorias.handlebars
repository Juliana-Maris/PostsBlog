<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}

<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>Slug: {{slug}}</small><br>
        <small>Data de criação: {{date}}</small>        
    </div>
    <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar Categoria</button></a><br>
    <form action="/admin/categorias/deletar" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
    </form>
</div>
{{else}}
    <h4 class="mt-4">Nenhuma Categoria resgistrada.</h4>
{{/each}}

